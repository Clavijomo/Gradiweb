<section class="section-latest-collection">
  <div class="section-latest-collection__glow-content"></div>
  <div class="section-latest-collection__section-title">
    <img src="../assets/star.svg" width="80" height="80">
    <h1>LATEST COLLECTION</h1>
    <img src="../assets/star.svg" width="80" height="80">
  </div>
  <div class="section-latest-collection__grid-collections">
    {% for collection in collections %}
      {% assign collection_date = collection.created_at | date: '%s' %}
      {% assign comparison_date = '2025-01-01' | date: '%s' %}
      {% if collection_date > comparison_date %}
        {% render 'collection-card', collection: collection %}
      {% endif %}
    {% endfor %}
  </div>
</section>
