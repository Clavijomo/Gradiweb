<section class="hero-banner">
  <div class="hero-banner__container">
    <img
      class="hero-banner__image"
      width="100%"
      height="100%"
      src="{{ settings.heroBanner.settings.background_image | asset_url }}"
      alt="Hero banner"
    >
    <div class="hero-banner__content">
      <button class="hero-banner__button">
        <a href="{{ settings.heroBanner.settings.button_link }}">View Collection</a>
      </button>
    </div>
  </div>
  <div class="hero-banner__section--marquee">
    <div class="hero-banner__marquee"></div>
  </div>
</section>
